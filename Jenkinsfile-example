@Library('company-ci-library@main') _

pipeline {
    agent any
    tools {
        // Use exact names from Manage Jenkins ‚Üí Global Tool Configuration
        maven 'maven-3'     // example: change to match your Maven tool name
    }

    environment {
        IMAGE_NAME = "company/sample-app"
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }

    stages {

        stage('Build') {
            steps {
                buildApp()
            }
        }

        stage('Docker') {
            steps {
                dockerBuild(IMAGE_NAME, IMAGE_TAG)
            }
        }

        stage('Deploy') {
            steps {
                deployK8s(IMAGE_NAME, IMAGE_TAG)
            }
        }
    }

    // post {
    //     success {
    //         notifySlack("Deployment Successful üöÄ")
    //     }
    //     failure {
    //         notifySlack("Deployment Failed ‚ùå")
    //     }
    // }
}
